
@{
    ViewBag.Title = "Отчеты";
}

@(Html.TelerikReporting().ReportViewer()
                    .Id("reportViewer1")
                    .ServiceUrl(Url.Content("~/api/reports/"))
                    .ReportSource((string)ViewBag.Template,(Dictionary<string, object>)ViewBag.Parameters)
                    .ViewMode(ViewMode.Interactive)
                    .ScaleMode(ScaleMode.Specific)
                    .Scale(1.0)
                    .PersistSession(false)
                    .PrintMode(PrintMode.AutoSelect)
                    .EnableAccessibility(false)
                    .SearchMetadataOnDemand(false)
                    .Deferred()
)

@section scripts
{

    <!--If Kendo is used it should be added before the report viewer.-->
    <script src="@Url.Content("~/api/reports/resources/js/telerikReportViewer")"></script>

    @(

           // All deferred initialization statements will be rendered here
            Html.TelerikReporting().DeferredScripts()
    )
}
<style>
    
    body {
        margin: 5px;
        font-family: Verdana, Arial, sans-serif;
    }

    #reportViewer1 {
        position: absolute;
        left: 1px;
        right: 1px;
        top: 1px;
        bottom: 1px;
        overflow: hidden;
        clear: both;
    }

    #theme-switcher {
        float: right;
        width: 12em;
        height: 30px;
    }
</style>